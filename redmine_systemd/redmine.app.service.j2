[Unit]
Description=APP Container for Redmine
After=docker.service
Requires=docker.service
After={{ service_group | default('') }}redmine.db.service
Requires={{ service_group | default('') }}redmine.db.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker start -a redminedocker_app_1
ExecStop=/usr/bin/docker stop redminedocker_app_1
Environment="DOCKER_HOST=tcp://127.0.0.1:4243"

[Install]
WantedBy=multi-user.target
